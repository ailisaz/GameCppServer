{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            //"windowsSdkVersion": "10.0.22621.0", // 你可以根据你安装的SDK版本修改
            "compilerPath": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.43.34808/bin/Hostx64/x64/cl.exe", // 修改为你的编译器路径
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-msvc-x64",
            // 这是最重要的一行！它让 C/C++ 扩展从 CMake Tools 扩展获取所有配置信息
            // 包括了 vcpkg 提供的所有头文件路径。
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ],
    "version": 4
}